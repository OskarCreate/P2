@model P2.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImagenUrl" class="img-fluid rounded" alt="Imagen de @Model.Nombre" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Nombre</h2>
            <p><strong>Precio:</strong> @Model.Precio.ToString("C")</p>
            <p><strong>Descripción:</strong> @Model.Descripcion</p>

            <form asp-controller="Carrito" asp-action="Agregar" method="post">
                <input type="hidden" name="idProducto" value="@Model.Id" />
                <button type="submit" class="btn btn-success mt-3">Añadir al carrito</button>
            </form>

            <a href="@Url.Action("Index", "Catalogo")" class="btn btn-secondary mt-3">Volver al catálogo</a>
        </div>
    </div>
</div>
